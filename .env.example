# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/cargo_sms
TEST_DATABASE_URL=postgresql://postgres:postgres@db:5432/cargo_sms_test

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# SMS Configuration (Infobip)
INFOBIP_API_KEY=your-infobip-api-key-here
INFOBIP_BASE_URL=https://api.infobip.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_PER_MINUTE=60

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload Configuration
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=uploads/

# Email Configuration (optional for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@cargo-sms.com
